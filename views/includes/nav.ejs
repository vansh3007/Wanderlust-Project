<script>
  const form = document.getElementById('searchForm');
  const searchCountryInput = document.getElementsByName('searchCountry')[0];

  form.addEventListener('submit', (event) => {
    event.preventDefault(); // Prevent the default form submission

    const searchCountry = searchCountryInput.value;
    const actionUrl = `/listing/search/${searchCountry}`;

    form.action = actionUrl; // Update the form action URL
    form.submit(); // Submit the form
  });
</script>
